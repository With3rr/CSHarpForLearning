using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp62
{
    class Program
    {
        static void Main(string[] args)
        {
            int n = Convert.ToInt32(Console.ReadLine());
            int dochod;
            int suma=0;
            int max=0;
            for (int i = 0; i <n; i++)
            {
                dochod = Convert.ToInt32(Console.ReadLine());
                suma = suma + dochod;
                if(suma>max)
                {
                    max = suma;
                }
                if(suma<0)
                {
                    suma = 0;
                }

            }
            Console.WriteLine(max);
            Console.ReadLine();
        }
    }
}
